generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}
model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique 
  passwordHash  String 
  name          String? 
  outfits       Outfit[]
  createdAt     DateTime  @default(now())
}

model Outfit {
  id        Int      @id @default(autoincrement())
  title     String
  tagsJson  String   @default("[]")
  mood      String   @default("")
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int


}